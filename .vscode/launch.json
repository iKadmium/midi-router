    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'midi-router'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=midi-router",
                    "--package=midi-router"
                ],
                "filter": {
                    "name": "midi-router",
                    "kind": "bin"
                }
            },
            "args": [],
            "env": {
                "RUST_BACKTRACE": "1",
                "RUST_LOG": "info"
            },
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in executable 'midi-router'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=midi-router",
                    "--package=midi-router"
                ],
                "filter": {
                    "name": "midi-router",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        }
    ]
}